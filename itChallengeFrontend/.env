# Base URL of your backend API
VITE_API_URL=http://localhost:3000/api

# App identity
VITE_APP_NAME=HoloHome
VITE_APP_VERSION=1.0.0

# Default theme mode (light or dark)
VITE_DEFAULT_THEME=light

# Debug mode (true shows console logs for API and Auth)
VITE_DEBUG=true

# Optional: base route for the app (for deployment under subpath)
# Example: /holohome if hosted under domain.com/holohome
VITE_BASE_PATH=/

# LocalStorage key names (to keep consistent)
VITE_TOKEN_KEY=token
VITE_USER_KEY=user
